#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int h,s,m,eh,em;
    scanf("%d",&h);
    scanf("%d",&m);
    scanf("%d",&s);
    em= s/60;
    s=s%60;
    m=m+em;
    eh=m/60;
    m=m%60;
    h=h+eh;
    printf("Total Number of hours is %d",h);
    printf("\nTotal Number of minutes is %d",m);
    printf("\nTotal Number of seconds is %d",s);
    return 0;
}
