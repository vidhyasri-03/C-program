#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int a,b,c,d,e;
    scanf("%d",&a);
    scanf("%d",&b);
    scanf("%d",&c);
    scanf("%d",&d);
    scanf("%d",&e);
    printf("Area of Triangle is %.2f",(float)(a*b)/2);
    printf("\nPerimeter of Triangle is %.2f",(float) c+d+e);
    return 0;
}
