#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int x,y,l;
    scanf("%d",&x);
    scanf("%d",&y);
    scanf("%d",&l);
    printf("x-coordinate:%d",x);
    printf("\ny-coordinate:%d",y);
    printf("\nLength:%d",l);
    printf("\nCentre of the ground is at (%d,%d)", x+(l/2),y+(l/2));
    return 0;
}
